<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<ScrollPane 
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.inventaris.controller.UserController"
    fitToWidth="true" pannable="true" hbarPolicy="AS_NEEDED">
<VBox spacing="20" style="-fx-padding: 30; -fx-background-color: #f8f9fa;">
    
     <!-- SIMAK TITLE + SEARCH -->
            <HBox spacing="30" alignment="CENTER_LEFT">
                <Label fx:id="lblSimak" text="SIMAK"
                      
                       style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #6A5436; -fx-cursor: hand;"/>

                <TextField fx:id="txtSearch" promptText="pencarian"
                           prefHeight="40" prefWidth="900"
                           style="-fx-background-color: #D9CBC1; -fx-background-radius: 10; -fx-font-size: 16px; -fx-padding: 10;" />
            </HBox>
    <!-- NAVIGATION -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Button fx:id="btnDashboard" text="Dashboard"
                        onAction="#handleDashboard"
                        style="-fx-background-color: #D9CBC1; -fx-background-radius: 25;
                               -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;"
                        prefWidth="180" prefHeight="50"/>

                <Button fx:id="btnPeminjaman" text="Peminjaman"
                        onAction="#handlePeminjaman"
                        style="-fx-background-color: #D9CBC1; -fx-background-radius: 25;
                               -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;"
                        prefWidth="180" prefHeight="50"/>

                <Button fx:id="btnLaporan" text="Laporan"
                        onAction="#handleLaporan"
                        style="-fx-background-color: #D9CBC1; -fx-background-radius: 25;
                               -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;"
                        prefWidth="180" prefHeight="50"/>

                <Button fx:id="btnBarang" text="Data Barang"
                        onAction="#handleBarang"
                        style="-fx-background-color: #D9CBC1; -fx-background-radius: 25;
                               -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;"
                        prefWidth="180" prefHeight="50"/>
                <Button fx:id="btnUser" text="Kelola"
                        onAction="#handleUser"
                        style="-fx-background-color: #D9CBC1; -fx-background-radius: 25;
                               -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;"
                        prefWidth="180" prefHeight="50"/>
                  <Button text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="btn-secondary" />
            </HBox>
    
        
      
  
    
    <!-- Tab Pane -->
    <TabPane VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
        
        <!-- TAB 1: Kelola User -->
        <Tab text="ðŸ‘¥ Kelola User">
            <VBox spacing="15" style="-fx-padding: 20;">
                
                <!-- Search -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="searchUserField" promptText="Cari user..." 
                              prefWidth="300" styleClass="search-box" />
                    <Button text="ðŸ” Cari" onAction="#handleSearchUser" styleClass="btn-primary" />
                </HBox>
                
                <!-- Table -->
                <TableView fx:id="userTable" styleClass="card" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colUserId" text="ID" prefWidth="50" />
                        <TableColumn fx:id="colUsername" text="Username" prefWidth="150" />
                        <TableColumn fx:id="colNama" text="Nama" prefWidth="200" />
                        <TableColumn fx:id="colRole" text="Role" prefWidth="100" />
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="100" />
                        <TableColumn fx:id="colUserAction" text="Aksi" prefWidth="200" />
                    </columns>
                </TableView>
                
            </VBox>
        </Tab>
        
        <!-- TAB 2: Kelola Peminjaman -->
        <Tab text="ðŸ“¦ Kelola Peminjaman">
            <VBox spacing="15" style="-fx-padding: 20;">
                
                <!-- Filter -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Filter Status:" />
                    <ComboBox fx:id="filterStatusBorrow" prefWidth="150" />
                </HBox>
                
                <!-- Table -->
                <TableView fx:id="allBorrowTable" styleClass="card" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colBorrowId" text="ID" prefWidth="50" />
                        <TableColumn fx:id="colBorrowPeminjam" text="Peminjam" prefWidth="150" />
                        <TableColumn fx:id="colBorrowBarang" text="Barang" prefWidth="180" />
                        <TableColumn fx:id="colBorrowTglPinjam" text="Tgl Pinjam" prefWidth="100" />
                        <TableColumn fx:id="colBorrowDeadline" text="Deadline" prefWidth="100" />
                        <TableColumn fx:id="colBorrowStatus" text="Status" prefWidth="120" />
                        <TableColumn fx:id="colBorrowAction" text="Aksi" prefWidth="180" />
                    </columns>
                </TableView>
                
            </VBox>
        </Tab>
        
        <!-- TAB 3: Kelola Laporan -->
        <Tab text="ðŸ“‹ Kelola Laporan">
            <VBox spacing="15" style="-fx-padding: 20;">
                
                <!-- Filter -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Filter Status:" />
                    <ComboBox fx:id="filterStatusLapor" prefWidth="150" />
                </HBox>
                
                <!-- Table -->
                <TableView fx:id="allLaporTable" styleClass="card" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colLaporNo" text="No. Laporan" prefWidth="120" />
                        <TableColumn fx:id="colLaporPeminjam" text="Peminjam" prefWidth="150" />
                        <TableColumn fx:id="colLaporBarang" text="Barang" prefWidth="180" />
                        <TableColumn fx:id="colLaporTgl" text="Tgl Laporan" prefWidth="100" />
                        <TableColumn fx:id="colLaporStatus" text="Status" prefWidth="100" />
                        <TableColumn fx:id="colLaporAction" text="Aksi" prefWidth="180" />
                    </columns>
                </TableView>
                
            </VBox>
        </Tab>
        
    </TabPane>
    
</VBox>
</ScrollPane>