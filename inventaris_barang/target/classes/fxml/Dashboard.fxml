<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane 
    fx:id="rootPane"
    xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.inventaris.controller.DashboardController"
            prefHeight="700.0" prefWidth="1200.0"
            style="-fx-background-color: #F5E6D3;">

    <!-- =========================== -->
    <!-- TOP HEADER (COKLAT) -->
    <!-- =========================== -->
   <top>
    <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 20; -fx-background-color: #765834;">
    <Circle fx:id="profileImage" radius="25" fill="white"/>

    <VBox spacing="3">
        <Label fx:id="welcomeLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Label fx:id="roleLabel" style="-fx-text-fill: white;"/>
    </VBox>

    <Pane HBox.hgrow="ALWAYS"/>
    
    <Label text="Log out" style="-fx-text-fill: white; -fx-cursor: hand;" onMouseClicked="#handleLogout"/>
</HBox>

</top>


    <!-- =========================== -->
    <!-- MAIN BODY AREA -->
    <!-- =========================== -->
    <center>
        <ScrollPane fitToWidth="true" pannable="true" style="-fx-background-color: #F5E6D3;">
        <VBox spacing="20" style="-fx-padding: 30; -fx-background-color: #F5E6D3;">

            <!-- SIMAK TITLE + SEARCH -->
            <HBox spacing="30" alignment="CENTER_LEFT">
                <Label fx:id="lblSimak" text="SIMAK"
                       onMouseClicked="#handleDashboard"
                       style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #6A5436; -fx-cursor: hand;"/>

                <TextField fx:id="txtSearch" promptText="pencarian"
               prefHeight="40" prefWidth="800"
               style="-fx-background-color: #D9CBC1; -fx-background-radius: 10; -fx-font-size: 16px; -fx-padding: 10;" />

    <Button text="ðŸ” Cari" onAction="#handleSearch"

            style="-fx-background-color: #8C6E63; -fx-text-fill: white; -fx-background-radius: 10;" />
            </HBox>

            <!-- NAVIGATION -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Button fx:id="btnDashboard" text="Dashboard"
                        onAction="#handleDashboard"
                        style="-fx-background-color: #D9CBC1; -fx-background-radius: 25;
                               -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;"
                        prefWidth="180" prefHeight="50"/>

                <Button fx:id="btnPeminjaman" text="Peminjaman"
                        onAction="#handlePeminjaman"
                        style="-fx-background-color: #D9CBC1; -fx-background-radius: 25;
                               -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;"
                        prefWidth="180" prefHeight="50"/>

                <Button fx:id="btnLaporan" text="Laporan"
                        onAction="#handleLaporan"
                        style="-fx-background-color: #D9CBC1; -fx-background-radius: 25;
                               -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;"
                        prefWidth="180" prefHeight="50"/>

                <Button fx:id="btnBarang" text="Data Barang"
                        onAction="#handleBarang"
                        style="-fx-background-color: #D9CBC1; -fx-background-radius: 25;
                               -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;"
                        prefWidth="180" prefHeight="50"/>
                <Button fx:id="btnUser" text="Kelola"
                        onAction="#handleUser"
                        style="-fx-background-color: #D9CBC1; -fx-background-radius: 25;
                               -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;"
                        prefWidth="180" prefHeight="50"/>
            </HBox>

            <!-- NEWS BANNER -->
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20 0;">

                <VBox alignment="CENTER" prefHeight="250" prefWidth="350"
                      style="-fx-background-color: #D9696F; -fx-background-radius: 15;">
                    <Label text="TELAH HILANG"
                           style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                    <Label text="KEPERCAYAAN"
                           style="-fx-text-fill: white; -fx-font-size: 48px; -fx-font-weight: bold;"/>
                </VBox>

                <VBox alignment="CENTER" prefHeight="250" prefWidth="350"
                      style="-fx-background-color: white; -fx-background-radius: 15;">
                    <Label text="BERITA 2"
                           style="-fx-text-fill: #6A5436; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                    <Label text="Konten berita kedua"
                           style="-fx-text-fill: #6A5436; -fx-font-size: 16px;"/>
                </VBox>

                <VBox alignment="CENTER" prefHeight="250" prefWidth="350"
                      style="-fx-background-color: #C9C9C9; -fx-background-radius: 15;">
                    <Label text="BERITA 3"
                           style="-fx-text-fill: #6A5436; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                    <Label text="Konten berita ketiga"
                           style="-fx-text-fill: #6A5436; -fx-font-size: 16px;"/>
                </VBox>

            </HBox>

            <!-- REKOMENDASI -->
            <VBox spacing="15">
                <Label text="Rekomendasi"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #6A5436;"/>

                <HBox spacing="20">

                    <!-- Handy Talky -->
                    <VBox alignment="CENTER" spacing="10" onMouseClicked="#handleBarang"
                          prefWidth="260" prefHeight="220"
                          style="-fx-background-color: #D9CBC1; -fx-background-radius: 15; -fx-padding: 15;">
                        <Rectangle arcHeight="20" arcWidth="20" fill="WHITE" width="220" height="120"/>
                        <Label text="Handy Talky" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Label text="Stok: 7"/>
                        <Label text="Status: Tersedia"/>
                        <Label text="Pemilik: Lembaga"/>
                    </VBox>

                    <!-- Proyektor -->
                    <VBox alignment="CENTER" spacing="10" onMouseClicked="#handleBarang"
                          prefWidth="260" prefHeight="220"
                          style="-fx-background-color: #D9CBC1; -fx-background-radius: 15; -fx-padding: 15;">
                        <Rectangle arcHeight="20" arcWidth="20" fill="WHITE" width="220" height="120"/>
                        <Label text="Proyektor" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Label text="Stok: 2"/>
                        <Label text="Status: Tersedia"/>
                        <Label text="Pemilik: Lembaga"/>
                    </VBox>

                    <!-- Terminal -->
                    <VBox alignment="CENTER" spacing="10" onMouseClicked="#handleBarang"
                          prefWidth="260" prefHeight="220"
                          style="-fx-background-color: #D9CBC1; -fx-background-radius: 15; -fx-padding: 15;">
                        <Rectangle arcHeight="20" arcWidth="20" fill="WHITE" width="220" height="120"/>
                        <Label text="Terminal 10m" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Label text="Stok: 3"/>
                        <Label text="Status: Tersedia"/>
                        <Label text="Pemilik: HMST"/>
                    </VBox>

                    <!-- Tenda -->
                    <VBox alignment="CENTER" spacing="10" onMouseClicked="#handleBarang"
                          prefWidth="260" prefHeight="220"
                          style="-fx-background-color: #D9CBC1; -fx-background-radius: 15; -fx-padding: 15;">
                        <Rectangle arcHeight="20" arcWidth="20" fill="WHITE" width="220" height="120"/>
                        <Label text="Tenda" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Label text="Stok: 1"/>
                        <Label text="Status: Tersedia"/>
                        <Label text="Pemilik: HIMAUDI"/>
                    </VBox>

                </HBox>
            </VBox>

        </VBox>
        </ScrollPane>
    </center>

</BorderPane>
