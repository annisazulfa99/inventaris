<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #6b5336;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventaris.controller.LoginController">

    <!-- Panel Putih Besar -->
    <AnchorPane layoutX="30" layoutY="40" prefHeight="520" prefWidth="840"
                style="-fx-background-color: white; -fx-background-radius: 25;">
        
        <!-- Header -->
        <AnchorPane prefHeight="90" prefWidth="840"
                    style="-fx-background-color: #b59a84; -fx-background-radius: 25 25 0 0;">
            <Label layoutX="240" layoutY="28" text="Selamat Datang di SIMAK"
                   style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: bold;"/>
        </AnchorPane>

        <!-- Bulatan Kiri -->
        <AnchorPane layoutX="50" layoutY="130" prefHeight="300" prefWidth="300"
                    style="-fx-background-color: #b59a84; -fx-background-radius: 200;">
        </AnchorPane>

        <!-- Panel Login di Kanan -->
        <VBox alignment="CENTER" layoutX="430" layoutY="140" spacing="15">

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Login"/>
            
            <Label fx:id="errorLabel" wrapText="true"
                   style="-fx-text-fill: red; -fx-font-size: 12px;"/>

            <TextField fx:id="usernameField" prefHeight="40" prefWidth="300"
                       promptText="username"
                       style="-fx-background-color: #dddddd; -fx-background-radius: 12; -fx-font-size: 14px;"/>

            <PasswordField fx:id="passwordField" prefHeight="40" prefWidth="300"
                           promptText="password"
                           style="-fx-background-color: #dddddd; -fx-background-radius: 12; -fx-font-size: 14px;"/>

            <Button fx:id="loginButton" text="Login" prefHeight="45" prefWidth="300"
                    onAction="#handleLogin"
                    style="-fx-background-color: #b59a84; -fx-background-radius: 12; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        </VBox>
    </AnchorPane>

</AnchorPane>
